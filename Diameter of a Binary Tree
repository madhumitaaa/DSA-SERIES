https://www.geeksforgeeks.org/problems/diameter-of-binary-tree/1

/*
class Node {
public:
    int data;
    Node* left;
    Node* right;

    Node(int val) {
        data = val;
        left = NULL;
        right = NULL;
    }
};

Node* newNode(int val) {
    return new Node(val);
}
*/

class Solution {
  public:
  
  int findmaxi(Node* root, int &maxi)
  {
      if(root==NULL)return 0;
      int lh=findmaxi(root->left,maxi);
      int rh=findmaxi(root->right,maxi);
      maxi=max(maxi,lh+rh);
      return 1+max(lh,rh);
  }
  
    int diameter(Node* root) {
        // Your code here
       int maxi=0;
       findmaxi(root,maxi);
       return maxi;
    }
};

