https://leetcode.com/problems/longest-valid-parentheses/

class Solution {
public:
    int longestValidParentheses(string s) {
        stack<int>st;
        int n=s.length();
        int len=0;
        st.push(-1);
        for(int i=0;i<n;i++)
        {
            char c=s[i];
            if(c=='(')st.push(i);
             else{
                st.pop();
                   if(st.empty())st.push(i);
                    else{
                                len=max(len,i-st.top());
                    }
                    
             }
        }
        return len;
    }
};
