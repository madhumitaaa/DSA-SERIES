https://leetcode.com/problems/valid-palindrome/

class Solution {
public:
    bool isPalindrome(string s) {
        int n=s.size();
        string org;
        for(int i=0;i<n;i++)
        {
            if(!isalnum(s[i]))continue;
            s[i]=tolower(s[i]);
            org+=s[i];
        }
         int left=0,right=org.size()-1;
         while(left<right)
         {
            if(org[left]!=org[right])return false;
            left++;
            right--;
         }
         return true;
    }
};
