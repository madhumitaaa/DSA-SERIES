https://leetcode.com/problems/out-of-boundary-paths/submissions/1879192510/

class Solution {
public:
int dp[51][51][51];
static const int MOD=1000000007;

int solve(int m, int n, int maxMove, int startRow, int startColumn)
{
        if(startRow<0||startRow>=m||startColumn<0||startColumn>=n)return 1;
        if(maxMove==0)return 0;
        if(dp[startRow][startColumn][maxMove]!=-1)return dp[startRow][startColumn][maxMove];
        long long ans=0;
       ans+=solve(m,n,maxMove-1,startRow-1,startColumn);
        ans+=solve(m,n,maxMove-1,startRow+1,startColumn);
        ans+=solve(m,n,maxMove-1,startRow,startColumn-1);
        ans+=solve(m,n,maxMove-1,startRow,startColumn+1);
       
return dp[startRow][startColumn][maxMove]=ans%MOD;

}

    int findPaths(int m, int n, int maxMove, int startRow, int startColumn) {
        //dp[row][col][move]=From this cell, with these many moves left, how many ways can I exit
        memset(dp,-1,sizeof(dp));
        return solve(m,n,maxMove,startRow,startColumn);


    }
};
