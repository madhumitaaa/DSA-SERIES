https://leetcode.com/problems/longest-repeating-character-replacement/submissions/1796822656/

class Solution {
public:
    int characterReplacement(string s, int k) {
        unordered_map<char,int>mpp;
        int left=0,maxfreq=0,maxlen=0,windowlen=0,tochange=0;
        for(int right=0;right<s.size();right++)
        {
            mpp[s[right]]++;
            maxfreq=max(maxfreq,mpp[s[right]]);
            windowlen=right-left+1;
            tochange=windowlen-maxfreq;
            if(tochange>k){
                mpp[s[left]]--;
                left++;
            }
            maxlen=max(maxlen,right-left+1);

        }
        return maxlen;
    }
};
