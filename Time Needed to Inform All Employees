https://leetcode.com/problems/time-needed-to-inform-all-employees/submissions/1835550292/

class Solution {
public:

int dfs(int node,vector<int>& informTime,vector<vector<int>>&adj)
{
    int maxi=0;
    for(int key:adj[node])
    {
        maxi=max(maxi,dfs(key,informTime,adj));
    }
    return informTime[node]+maxi;
}




    int numOfMinutes(int n, int headID, vector<int>& manager, vector<int>& informTime) {
        vector<vector<int>>adj(n);
        for(int i=0;i<n;i++)
        {
           if(manager[i]!=-1) adj[manager[i]].push_back(i);
        }
       int ans= dfs(headID,informTime,adj);
       return ans;


    }
};
