https://leetcode.com/problems/check-if-array-is-sorted-and-rotated/


class Solution {
public:
    bool check(vector<int>& nums) {
        int i=0,n=nums.size(),c=0;
        
        for(int i=0;i<n;i++)
        {
            if(nums[i]>=nums[(i+1)%n]){
                c++;
            }
        }
        return c<=1;
        
    }
};
