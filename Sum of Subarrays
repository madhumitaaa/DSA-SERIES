https://www.geeksforgeeks.org/problems/sum-of-subarrays2229/1

class Solution {
  public:
    int subarraySum(vector<int>& arr) {
        // code here
        int n=arr.size();
        vector<int>prefix(n+1,0);
        for(int i=0;i<n;i++)
        {
            prefix[i+1]=prefix[i]+arr[i];
        }
        long long sum=0;
      
       for(int i=0;i<n;i++)
       {
           sum+=arr[i]*(i+1)*(n-i);
       }
        return (int)sum;
    }
};
