https://leetcode.com/problems/find-k-closest-elements/submissions/1816909963/

class Solution {
public:
    vector<int> findClosestElements(vector<int>& arr, int k, int x) {
        int n=arr.size();
       
           int l=0,r=n-1;
           while(r-l+1>k)
           {
            if(abs(arr[l]-x)>abs(arr[r]-x)){
                l++;
            }
            else r--;
           }
           
       return vector<int>(arr.begin()+l,arr.begin()+r+1) ;
    }
};
