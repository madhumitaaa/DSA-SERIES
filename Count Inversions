https://takeuforward.org/plus/dsa/problems/count-inversions

class Solution {
public:

long long merge(vector<int>&nums,int low,int mid,int high)
{
    vector<int>temp;
    int left=low;
    int right=mid+1;
    long long inversions=0;
    while(left<=mid && right<=high){
            if(nums[left]<=nums[right]){
                    temp.push_back(nums[left]);
                    left++;
            }
            else {
                temp.push_back(nums[right]);
                inversions+=(mid-left+1);
                right++;
            }
         }
         while(left<=mid)
         {
            temp.push_back(nums[left]);
            left++;
         }
         while(right<=high)
         {
             temp.push_back(nums[right]);
             right++;
         }
         for(int i=low;i<=high;i++)
         {
            nums[i]=temp[i-low];
         }
         return inversions;
    }

long long mergesort(vector<int>&nums,int low,int high){
    long long inversions=0;
    if(low>=high)return 0;
    int mid=low+(high-low)/2;
    inversions+=mergesort(nums,low,mid);
    inversions+=mergesort(nums,mid+1,high);
    inversions+=merge(nums,low,mid,high);
    return inversions;
}

long long int numberOfInversions(vector<int> nums) {
 return mergesort(nums,0,nums.size()-1);

    }
};
