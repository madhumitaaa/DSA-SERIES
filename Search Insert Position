https://leetcode.com/problems/search-insert-position/description/

class Solution {
public:
    int searchInsert(vector<int>& nums, int target) {
       int idx=0;
        for(int i=0;i<nums.size()-1;i++)
        {
            
            if(target>nums[i]&&target<=nums[i+1])idx=i+1;
        }
        if(idx>0)  return idx;
         else if(target>nums[0])idx=nums.size();
          else if(target<nums[0])idx= 0;
          return idx;
    }
};
