https://leetcode.com/problems/largest-number/submissions/1787110103/

class Solution {
public:
    string largestNumber(vector<int>& nums) {
vector<string>s;
s.reserve(nums.size());
for(int x:nums)
{
    s.push_back(to_string(x));
}
sort(s.begin(),s.end(),[](const string &a,const string &b)
{
    return a+b>b+a;
});

if(!s.empty() && s[0]=="0")
{
    return "0";
}

string res;
for(auto &str:s)
{
    res+=str;
}
return res;



    }
};
