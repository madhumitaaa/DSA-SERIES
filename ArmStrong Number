https://takeuforward.org/plus/dsa/problems/check-if-the-number-if-armstrong

class Solution {
public:
    bool isArmstrong(int n) {
        int temp=n;
        int c=0;
        int original=n;
        while(temp!=0)
        {
                temp/=10;
                c++;
        }
        temp=n;
        int sum=0;
        while(n!=0){
            int digit=n%10;
             sum+=pow(digit,c);
             n=n/10;
        }
        return sum==original;

    }
};
