https://leetcode.com/problems/reverse-string-ii/submissions/1926759127/

class Solution {
public:
    string reverseStr(string s, int k) {
        int n=s.size();
      
        for(int i=0;i<n;i+=(2*k))
        {
            int right=min(i+k,n);
            reverse(s.begin()+i,s.begin()+right);
            
        }
        return s;
    }
};
