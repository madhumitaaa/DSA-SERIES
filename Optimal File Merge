https://www.geeksforgeeks.org/problems/optimal-file-merge/1

//User function Template for C++

class Solution
{
public:
    // Function to find minimum computation
    int minComputation(vector<int> files)
    {
        // code here
        priority_queue<int,vector<int>,greater<int>>pq;
        for(int x:files)
        {
            pq.push(x);
            
        }
        int total=0;
        while(pq.size()>1)
        {
            int a=pq.top();
            pq.pop();
            int b=pq.top();
            pq.pop();
            int merge=a+b;
            total+=merge;
            pq.push(merge);
        }
        return total;
    }
};
